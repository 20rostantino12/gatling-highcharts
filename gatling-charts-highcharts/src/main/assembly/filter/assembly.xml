<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bundle</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.excilys.ebi.gatling:gatling-recorder</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>recorder</outputDirectory>
			<includes>
				<include>com.excilys.ebi.gatling:gatling-recorder</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>target/gatling-bundle-${gatling.version}/assets</directory>
			<outputDirectory>/assets</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/gatling-bundle-${gatling.version}/conf</directory>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/gatling-bundle-${gatling.version}/results</directory>
			<outputDirectory>/results</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/gatling-bundle-${gatling.version}/user-files</directory>
			<outputDirectory>/user-files</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/assembly-structure</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/gatling-bundle-${gatling.version}/bin/gatling.sh</source>
			<fileMode>0755</fileMode>
			<outputDirectory>/bin/</outputDirectory>
		</file>
		<file>
			<source>target/gatling-bundle-${gatling.version}/bin/gatling.bat</source>
			<outputDirectory>/bin/</outputDirectory>
		</file>
	</files>
</assembly>